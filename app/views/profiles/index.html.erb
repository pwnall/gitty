<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td>
      <%= link_to 'Destroy', profile,  :method => :delete, :data => {
              :confirm => 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

